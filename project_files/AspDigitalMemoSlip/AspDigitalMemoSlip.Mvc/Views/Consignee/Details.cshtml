@{
    var consignee = ViewBag.Consignee;
    var images = ViewBag.Images;
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Consignee Details:</h4>
                <p style="margin-top: 2rem"><strong>Username:</strong> @consignee.UserName</p>
                <p><strong>Name:</strong> @consignee.Name</p>
                <p><strong>Email:</strong> @consignee.Email</p>
                <p><strong>Phone Number:</strong> @consignee.PhoneNumber</p>
                <p><strong>Insurance Number:</strong> @consignee.InsuranceNumber</p>
                <p><strong>Insurance Coverage:</strong> @consignee.InsuranceCoverage</p>
                <p><strong>National Registry Number:</strong> @consignee.NationalRegistryNumber</p>
                <p><strong>National Registry Expiration Date:</strong> @consignee.NationalRegistryExpirationDate</p>
                <p><strong>VAT Number:</strong> @consignee.VATNumber</p>
                @if (images != null)
                {
                    <p><strong>ID Copy:</strong></p>
                    <img src="@($"data:image/jpeg;base64,{images.IdCopy.FileContents}")" alt="ID Copy" class="img-fluid mb-3" />
                }

            </div>
            @if (images != null)
            {
                <div class="col-md-3 offset-md-3 d-none d-sm-block">
                    <img src="@($"data:image/jpeg;base64,{images.Selfie.FileContents}")" alt="Selfie" class="img-fluid" style="max-width: 100%; margin-right: 15%;" />
                </div>
            }
            else
            {
                <p class="text-danger">Error: ID Copy not found.</p>
                <p class="text-danger">Error: Selfie not found.</p>
            }
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button onclick="location.href='@Url.Action("Accept", "Consignee", new { id = consignee.Id })'" class="btn btn-primary btn-lg">Accept</button>
                <button onclick="location.href='@Url.Action("Decline", "Consignee", new { id = consignee.Id })'" class="btn btn-danger btn-lg">Decline</button>
            </div>
        </div>
    </div>
</div>
