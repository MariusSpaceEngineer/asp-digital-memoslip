@using DTOClassLibrary.DTO.Memo
@using DTOClassLibrary.DTO.Product
@model MemoDTO

@{
    ViewData["Title"] = "MemoDetails";
}

<head>
   <meta charset="utf-8" />
    <title>MemoDetails</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
</head>

<body>

<div class="container mt-4">
    <div class="row" style="margin-bottom:2rem;">
            <div class="col-md-4">
                <strong>Consignee:</strong>
                @if (Model.Consignee != null)
                {
                    @Model.Consignee.Name
                }
                else
                {
                    <em>No Consignee</em>
                }
            </div>
        <div class="col-md-4 text-center">
            <strong>ID:</strong> @Model.Id
        </div>
        <div class="col-md-4 text-right">
            <strong>Creation Date:</strong> @Model.CreateDate
        </div>
    </div>



    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Lot Number</th>
                    <th>Description</th>
                    <th>Carat</th>
                    <th>Price</th>
                    <th>State</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.LotNumber</td>
                        <td>@product.Description</td>
                        <td>@product.Carat</td>
                        <td>@product.Price</td>
                        <td>@product.State</td>
                        <td>@product.Remarks</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <em>No Products</em>
    }

    <div class="text-center mt-4">
        @Html.ActionLink("Back to List", "MemosPage", null, new { @class = "btn btn-primary" })
    </div>
</div>

</body>
